{% extends 'base.html.twig' %}

{% block title %}InfosPdf{% endblock %}

{% block body %}
    <h1>InfosPdf</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ infos_pdf.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ infos_pdf.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ infos_pdf.lastname }}</td>
            </tr>
            <tr>
                <th>SessionName</th>
                <td>{{ infos_pdf.sessionName }}</td>
            </tr>
            <tr>
                <th>ParticipateAt</th>
                <td>{{ infos_pdf.participateAt ? infos_pdf.participateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ infos_pdf.content }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ infos_pdf.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('infos_pdf_index') }}">back to list</a>
    <a href="{{ path('infos_pdf_edit', {'id': infos_pdf.id}) }}">edit</a>
    


    <a href="{{ path('generate_pdf', {'id': infos_pdf.id}) }}">Generate Pdf</a>
    
    <a href="{{ asset('uploads/images/' ~ infos_pdf.pdfPath) }}" download>Download</a>

    {{ include('infos_pdf/_delete_form.html.twig') }}
{% endblock %}
